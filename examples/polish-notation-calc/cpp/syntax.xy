number /[0-9]+/ text
add /\+/
sub /\-/
mul /\*/
div /\//
pow /\^/
/ +/
%%

%top {
#include <cmath>

using ResultType = double;
}

S : E %eof  { _1 }
  ;
E : add E E { _2 + _3 }
  | sub E E { _2 - _3 }
  | mul E E { _2 * _3 }
  | div E E { _2 / _3 }
  | pow E E { std::pow(_2, _3) }
  | number  { std::stod(_1) }
  ;
